<div class="page-content" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="mdl-grid">

    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="demo-card-wide mdl-card mdl-shadow--2dp EditNewCard">
          <h1>Forgot your password?</h1>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.email_field :email, required: false, autofocus: true, :class => "mdl-textfield__input" %>
              <%= f.label :email, :class => "mdl-textfield__label" %>
            </div>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= f.button :submit, "Send a reset", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
