<div class="page-content" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="mdl-grid">

    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="demo-card-wide mdl-card mdl-shadow--2dp EditNewCard">
          <h1>Sign In</h1>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.email_field :email, required: false, autofocus: true, :class => "mdl-textfield__input" %>
              <%= f.label :email, :class => "mdl-textfield__label" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, required: false, :class => "mdl-textfield__input" %>
              <%= f.label :password, :class => "mdl-textfield__label" %>
            </div>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= f.button :submit, "Sign in", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            <%= link_to "Don't have an account yet?", new_user_registration_path, :style => "margin-left: 25px" %>
          </div>
        </div>
        <%= link_to "Forgot your password?", new_user_password_path, :style => "margin-top: 50px;" %>
      <% end %>

    </div>
  </div>
</div>
