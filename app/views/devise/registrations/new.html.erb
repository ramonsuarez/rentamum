<div class="page-content" style="margin-top: 50px; margin-bottom: 50px;">
  <div class="mdl-grid">

    <div class="mdl-cell mdl-cell--4-col"></div>
    <div class="mdl-cell mdl-cell--4-col">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="demo-card-wide mdl-card mdl-shadow--2dp EditNewCard">
          <h1>Sign Up</h1>
          <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :first_name, required: true, autofocus: true, :class => "mdl-textfield__input" %>
              <%= f.label :first_name, :class => "mdl-textfield__label" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.text_field :last_name, required: true, autofocus: true, :class => "mdl-textfield__input" %>
              <%= f.label :last_name, :class => "mdl-textfield__label" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.email_field :email, required: true, autofocus: true, :class => "mdl-textfield__input" %>
              <%= f.label :email, :class => "mdl-textfield__label" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :class => "mdl-textfield__input" %>
              <%= f.label :password, :class => "mdl-textfield__label" %>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.password_field :password_confirmation, required: true, :class => "mdl-textfield__input" %>
              <%= f.label :password_confirmation, :class => "mdl-textfield__label" %>
            </div>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= f.button :submit, "Sign up", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            <%= link_to "Already have an account?", new_user_session_path, :style => "margin-left: 25px" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
